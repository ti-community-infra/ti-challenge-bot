{
  "name": "challenge-bot",
  "version": "1.0.0",
  "private": true,
  "description": "A challenge bot for PingCAP challenge program.",
  "author": "Rustin-Liu <rustin.liu@gmail.com>",
  "license": "ISC",
  "repository": "https://github.com/tidb-community-bots/challenge-bot.git",
  "homepage": "https://github.com/tidb-community-bots/challenge-bot",
  "bugs": "https://github.com/tidb-community-bots/challenge-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest --coverage && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "probot": "^9.5.3"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "nock": "^12.0.0",
    "nodemon": "^2.0.0",
    "smee-client": "^1.1.0",
    "standard": "^14.3.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ],
    "ignore": [
      "/docs"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test"
    }
  }
}
